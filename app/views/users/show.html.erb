<% provide :title, @user.name_user %>
<div class="container show" >
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="well well-md">
        <div class="row">
          <div class="col-sm-4 col-md-4">
            <%= gravatar_for @user %>
          </div>
          <div class="col-sm-6 col-md-6">
            <h5><%= @user.name_user %></h5>
            <small>
              <cite><%= @user.address %><i class="fa fa-map-marker">
              </i></cite>
            </small>
            <i class="fa fa-envelope"></i><%= @user.email %>
            <br />
            <i class="fa fa-phone"></i><%= @user.tel%>
            <br />
          </div>
          <div class="col-sm-2 col-md-2">
            <p class = "btb btn-success setting"><%= link_to t(".setting"), edit_user_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
