<header>
  <div id="wrapper">
    <nav class="navbar navbar-default navbar-static-top nav-header" role="navigation" style="margin-bottom: 0">
      <div class="navbar-header">
        <div class="logo">
          <%= link_to image_tag("logo.png", alt: "Booking Your Travel"), "http://localhost:3000/admin" %>
        </div>
      </div>
      <ul class="nav navbar-top-links navbar-right">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-user"></i><i class="fa fa-angle-down"></i>
          </a>
          <ul class="dropdown-menu dropdown-user">
            <li>
              <i class="fa fa-user user-dropdown">
                <%= link_to t(".user"), user_path(@current_user) %>
              </i>
            </li>
            <li>
              <i class="fa fa-cog user-dropdown">
                <%= link_to t(".settings"), "#" %>
              </i>
            </li>
            <li class="divider"></li>
            <li>
              <i class="fa fa-sign-out user-dropdown">
                <%= link_to t(".logout"), logout_path %>
              </i>
            </li>
          </ul>
        </li>
      </ul>
      <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
          <ul class="nav" id="side-menu">
            <li class="sidebar-search">
              <div class="input-group custom-search-form">
                <input type="text" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                  <button class="btn btn-default" type="button">
                    <i class="fa fa-search"></i>
                  </button>
                </span>
              </div>
            </li>
            <li>
              <div class="list-slidebar">
                <i class="fa fa-user icon-side-bar"></i>
                <%= link_to t(".users"), admins_users_path %>
              </div>
            </li>
            <li>
              <a href="#"><i class="fa fa-plane icon-side-bar"></i><%= t(".tours")%><span class="fa arrow"></span></a>
              <ul class="nav nav-second-level">
                <li>
                  <div class="list-slidebar">
                    <i class="fa fa-plus-circle second-level-icon"></i>
                    <%= link_to t(".add_tour"), new_admins_tour_path %>
                  </div>
                </li>
                <li>
                  <div class="list-slidebar">
                    <i class="fa fa-edit second-level-icon"></i>
                    <%= link_to t(".manage_tours"), admins_tours_path %>
                  </div>
                </li>
              </ul>
            </li>
            <li>
              <div class="list-slidebar">
                <i class="fa fa-plane icon-side-bar"></i>
                <%= link_to t(".reviews"), "#" %>
              </div>
            </li>
            <li>
              <div class="list-slidebar">
                <i class="fa fa-briefcase icon-side-bar"></i>
                <%= link_to t(".catergories_tour"), "#" %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
