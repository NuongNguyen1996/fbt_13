<% provide :button_text, t(".button") %>
<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <nav class="row">
      <div class="logo col-md-4">
        <%= link_to image_tag("logo.png", alt: "Booking Your Travel"), "http://localhost:3000/" %>
      </div>
      <div class="col-md-7">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t(".home"), "#" %></li>
          <li><%= link_to t(".help"), "#" %></li>
        <%
      if @current_user.present?
      %>
        <li><span><%=@current_user.name_user%></span></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-user icon-side-bar"></i><i class="fa fa-angle-down"></i>
          </a>
          <ul class="dropdown-menu dropdown-user">
            <li><i class="fa fa-user user-dropdown icon-side-bar"><%= link_to t(".user"), user_path(@current_user)%></i>
            </li>
            <li><i class="fa fa-cog user-dropdown icon-side-bar"><%= link_to t(".settings"), edit_user_path(@current_user) %></i>
            </li>
            <li class="divider"></li>
            <li><i class="fa fa-sign-out user-dropdown icon-side-bar"><%= link_to t(".logout"), logout_path %></i>
            </li>
          </ul>
        </li>

      <%else%>
      <li><%= link_to t(".login"), login_path %></li>
        <% end %>
          <li class="clearfix"></li>
        </ul>
      </div>
    </nav>
    <center>
      <div class="row">
        <%= form_tag search_path, method: :get do %>
        <div class="col-md-7">
          <%= text_field_tag :search, params[:search], placeholder: "Search ..." %>
        </div>
        <div class="col-md-4">
          <% if @cat_tours %>
          <div class="row">
            <div class="col-md-6">
              <label><%= t ".cat_tour_name" %></label>
            </div>
            <div class="col-md-3">
              <%= select_tag :p, options_from_collection_for_select(@cat_tours, :id, :name_category)%>
            </div>
            <div class="col-md-3">
              <%= submit_tag yield(:button_text), class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
        <% end %>
        </div>
      </div>
    </center>
  </div>
</header>
